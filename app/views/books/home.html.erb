<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <h3>Books</h3>
  </div>

</div>

<!-- Show notices here -->

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <table class= "table table-hover">
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author </th>
        <th>Price</th>
        <th>Book Picture</th>
      </tr>
        <% @books.each do |book| %>
          <tr>
            <%= link_to show_path(id: book.id) do%>
              <td><%= book.id %></td>
              <td><%= link_to book.title, show_path(id: book.id) %></td>
              <td><%= book.author.full_name %></td>
              <td><%= number_to_currency book.price %></td>
              <td><%= link_to "pic", book.photo_url %></td>
              <% end %>
          </tr>
        <% end %>

    </table>

  </div>

</div>

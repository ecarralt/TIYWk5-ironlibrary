<div class="row">

  <div class="col-xs-8 col-xs-offset-2">

<h3>Please sign in here:</h3>

  </div>
</div>
<div class="row">

  <div class="col-xs-8 col-xs-offset-2">
    <%= form_tag do %>

      <div class="row">
        <%= label_tag :username %>
        <%= text_field_tag :username %>
      </div>

      <div class="row">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <div class="">
        <%= submit_tag "Sign In" %>
        or
        <%= link_to 'Sign Up', home_path %>
      </div>

    <% end %>

  </div>

</div>
